<h1>Books</h1>

<% @books.each do |book| %>

  <p>Title</p>
  <span><%= book.title %></span>

  <p>Body</p>
  <span><%= book.body %></span>

  <span>
    <%= link_to "show", book_path(book.id) %>
  </span>

  <span>
    <%= link_to "Edit", "/books/#{book.id}/edit" %>
  </span>

  <span>
    <%= link_to "Destroy", "/books/#{book.id}/destroy" %>
  </span>

<% end %>